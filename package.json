{
  "name": "ispindel-multiservice",
  "version": "1.0.4",
  "description": "Send iSpindel data to multiple services",
  "main": "build/index.js",
  "scripts": {
    "build": "pnpm tsc -p tsconfig.json",
    "prebuild": "rimraf build",
    "start": "pnpm build && node build/src/index.js",
    "dev": "nodemon",
    "test": "pnpm build && tap run",
    "release": "dotenv release-it --"
  },
  "keywords": [
    "ispindel",
    "homebrewing"
  ],
  "author": "Chris Scott",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "envsub": "4.1.0",
    "fastify": "^5.6.2"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "debug": "^4.4.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.11",
    "release-it": "^19.2.1",
    "rimraf": "^6.1.2",
    "tap": "21.5.0",
    "ts-node": "10.9.2",
    "typescript": "^5.9.3"
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "exec": "pnpm build && pnpm start",
    "ext": "ts"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}
